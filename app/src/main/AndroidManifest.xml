<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".UserData.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_clear_no_text"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_clear_no_text"
        android:supportsRtl="true"
        android:theme="@style/Theme.LatihanMobileApp"
        tools:targetApi="31">
        <activity android:name=".ui.RegistPage"></activity>
        <activity android:name=".ui.LoginPage"></activity>
        <activity android:name=".ui.homePage"></activity>
        <activity
            android:name=".ui.splashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>