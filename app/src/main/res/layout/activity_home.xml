<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/logo_home"
        android:layout_width="114dp"
        android:layout_height="119dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/desc"
        android:src="@drawable/logo_clear_no_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Search IPO"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/logo_home"
        app:layout_constraintStart_toStartOf="@+id/logo_home"
        app:layout_constraintTop_toBottomOf="@+id/logo_home" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="398dp"
        android:layout_height="51dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_input"
        android:hint="@string/search"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/logo_name"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/logo_name"
        app:layout_constraintTop_toBottomOf="@+id/logo_name"
        android:drawableStart="@drawable/baseline_search_24"
        android:drawablePadding="10dp"
        android:padding="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>